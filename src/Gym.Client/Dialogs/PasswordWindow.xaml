<Window x:Class="Gym.Client.Dialogs.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Password" Height="150" Width="300">
    <StackPanel Margin="10">
        <PasswordBox x:Name="PwdBox" Margin="5"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="5" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Cancel" Width="80" Margin="5" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
